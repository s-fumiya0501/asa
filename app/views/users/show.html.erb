  <div class="container">
    <div class="row">
      <%= render 'users/info', user: @user, book: @book %>
        <div class="col-md-8 offset-md-1">
          <h2>Books</h2>
            <table class="table">
              <thead>
                <tr>
                  <th></th>
                  <th>Title</th>
                  <th>Opinion</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
                <% @showbook.each do |book| %>
                <tr>
                  <td>
                    <%= link_to attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
                  </td>
                  <td>
                    <%= link_to book.title, book_path(book) %>
                  </td>
                  <td>
                    <%= book.body %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
        </div>
    </div>
  </div>